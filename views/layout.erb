<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Hello World</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/reset.css'>
    <link rel='stylesheet' href='/stylesheets/main.css'>
  </head>
  <body>
    <div class='wrapper'>
      <nav>
        <h4><a href="/game">Play Now</a></h4>
        <h4><a href="/login">LogIn</a></h4>
        <h4><a href="/about">About</a>
          <h4><a href="/howtoplay">How to Play</a></h4>
          <div>
            <% if current_user.nil? %>
              <h4><a href="/register">SignIn</a></h4>
            <% else %>
              <a>
                <%= current_user.email %>
              </a>
              <h4><a href="/session" method="delete">Logout</a></h4>
            <% end %>
          </div>
        </nav>
      </div>
      <%= yield %>
    </body>
  </html>
